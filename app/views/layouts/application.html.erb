<!DOCTYPE html>
<html>
<head>
  <title>GoalSetter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <center>

  <% if logged_in? %>
  <a href="<%= user_url(current_user) %>"><img src="http://www.absolutearts.com/portfolio3/j/jamesparker/Black_and_White_Mountains-1063076612m.jpg" height=300></a>
  <br>
    username: <%= current_user.username %>
    <%= link_to "Log Out", session_url, method: :delete %>
  <% else %>
  <img src="http://www.absolutearts.com/portfolio3/j/jamesparker/Black_and_White_Mountains-1063076612m.jpg" height=300><br>
    <%= link_to "Sign In", new_session_url unless current_page?(new_session_url) %>
    <%= link_to "Sign Up", new_user_url unless current_page?(new_user_url) %>
  <% end %>

<%= flash[:errors] %>
<%= yield %>
  </center>
</body>
</html>
